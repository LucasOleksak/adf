{
	"name": "CharmaCRM_Simple_Trackings",
	"properties": {
		"activities": [
			{
				"name": "CopySimpleTracking",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "CosmosDbMongoDbApiSource",
						"batchSize": 100,
						"filter": {
							"value": "{   domain : '@{pipeline().parameters.domain_id}', \n    uid: { $ne: null },\n    createdAt : {\n        $gte : ISODate('@{formatDateTime(addDays(utcNow(), \n                        pipeline().parameters.days), 'yyyy-MM-dd')}'),\n        $lt : ISODate('@{formatDateTime(addDays(utcNow(), \n                        pipeline().parameters.days_to),'yyyy-MM-dd')}') \n    }\n}",
							"type": "Expression"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['uid']"
								},
								"sink": {
									"name": "uid"
								}
							},
							{
								"source": {
									"path": "$['url']"
								},
								"sink": {
									"name": "url"
								}
							},
							{
								"source": {
									"path": "$['referrer_url']"
								},
								"sink": {
									"name": "referrer_url"
								}
							},
							{
								"source": {
									"path": "$['page_title']"
								},
								"sink": {
									"name": "page_title"
								}
							},
							{
								"source": {
									"path": "$['domain']"
								},
								"sink": {
									"name": "domain"
								}
							},
							{
								"source": {
									"path": "$['createdAt']['$date']"
								},
								"sink": {
									"name": "createdAt_$date",
									"type": "Int64"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "Mongo_TrackingSimpleTracking",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "CharmaCRMRawData",
						"type": "DatasetReference",
						"parameters": {
							"datatype": {
								"value": "@pipeline().parameters.datatype",
								"type": "Expression"
							},
							"site": {
								"value": "@pipeline().parameters.site",
								"type": "Expression"
							},
							"days": {
								"value": "@pipeline().parameters.days",
								"type": "Expression"
							}
						}
					}
				]
			},
			{
				"name": "ProcessDataFromSimpleTrackings",
				"type": "ExecuteDataFlow",
				"dependsOn": [
					{
						"activity": "CopySimpleTracking",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataflow": {
						"referenceName": "DataFlowForSimpleTrackings",
						"type": "DataFlowReference",
						"parameters": {
							"sitename": {
								"value": "'@{pipeline().parameters.site}'",
								"type": "Expression"
							},
							"datatype": {
								"value": "'@{pipeline().parameters.datatype}'",
								"type": "Expression"
							},
							"days": {
								"value": "@pipeline().parameters.days",
								"type": "Expression"
							},
							"site": {
								"value": "'@{pipeline().parameters.site}'",
								"type": "Expression"
							}
						},
						"datasetParameters": {
							"RawDataFromBlob": {
								"datatype": {
									"value": "@pipeline().parameters.datatype",
									"type": "Expression"
								},
								"site": {
									"value": "@pipeline().parameters.site",
									"type": "Expression"
								},
								"days": {
									"value": "@pipeline().parameters.days",
									"type": "Expression"
								}
							},
							"SaveToReadyCSV": {
								"datatype": {
									"value": "@pipeline().parameters.datatype",
									"type": "Expression"
								},
								"site": {
									"value": "@pipeline().parameters.site",
									"type": "Expression"
								},
								"days": {
									"value": "@pipeline().parameters.days",
									"type": "Expression"
								}
							},
							"SaveToRanking": {
								"datatype": {
									"value": "@pipeline().parameters.datatype",
									"type": "Expression"
								},
								"site": {
									"value": "@pipeline().parameters.site",
									"type": "Expression"
								},
								"days": {
									"value": "@pipeline().parameters.days",
									"type": "Expression"
								}
							},
							"SaveSortedAggregation": {
								"datatype": {
									"value": "@pipeline().parameters.datatype",
									"type": "Expression"
								},
								"site": {
									"value": "@pipeline().parameters.site",
									"type": "Expression"
								},
								"days": {
									"value": "@pipeline().parameters.days",
									"type": "Expression"
								}
							}
						}
					},
					"compute": {
						"coreCount": 8,
						"computeType": "General"
					},
					"traceLevel": "Fine"
				}
			}
		],
		"parameters": {
			"domain_id": {
				"type": "string",
				"defaultValue": "charma.io"
			},
			"days": {
				"type": "int",
				"defaultValue": -5
			},
			"site": {
				"type": "string",
				"defaultValue": "charma.io"
			},
			"datatype": {
				"type": "string",
				"defaultValue": "simple_trackings"
			},
			"days_to": {
				"type": "int",
				"defaultValue": -4
			}
		},
		"folder": {
			"name": "CRM/Charma"
		},
		"annotations": []
	}
}